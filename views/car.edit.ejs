<% include forms/new.car.ejs %>

<script >

  $("#carpic").fileinput({
    showPreview: true,
    uploadAsync: false,
    uploadUrl:"/message/image/carpic",
  });

  $("#insurancepic").fileinput({
    showPreview: true,
    uploadAsync: false,
    uploadUrl:"/message/image/insurancepic",
  });

  $("#dlpic").fileinput({
    showPreview: true,
    uploadAsync: false,
    uploadUrl:"/message/image/dlpic",
  });


  $(document).on('submit', 'form', (evt) => {
    evt.preventDefault();
    $.post($('form').attr('action'), $('form').serialize(), (data) => {
      var jst_tmpl = this['JST'][`assets/templates/alert-dismissible.html`]({
        type: 'alert-success', title: 'Good job!', info: 'New record success'
      });

      $('#root').append(jst_tmpl);
    });
  });

  $(document).on('click', 'form .btn-submit', (evt) => {
    evt.preventDefault();
    $('form').submit();
  });

  $(document).ready(function () {
    toggleSiderbarMenu('edit_car');
  });
</script>
