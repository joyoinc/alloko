<% var hostInfo = cUser.hosts; %>


  <% include forms/change-password %>

    <script>
      $(document).on('submit', 'form', (evt) => {
        evt.preventDefault();
        $.post($('form').attr('action'), $('form').serialize(), (data) => {
          if (data.errCode) {
            var message = "";
            if (data.errCode == "notFound")
              message = "用户名密码不匹配";
            if (data.errCode == "notMatch")
              message = "两次密码不匹配";

            alert(message);
          } else {
            window.location = "/h/dashboard";
          }
        });
      });

      $(document).on('click', 'form .btn-submit', (evt) => {
        evt.preventDefault();
        $('form').submit();
      });
    </script>