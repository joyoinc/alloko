  <script>
    /* data */
    var provinces = [
      {id:'jiangsu', text:'江苏'},
      {id:'zhejiang', text:'浙江'},
      {id:'guangdong', text:'广东'},
    ]
    var cities = [
      {id:'nanjing', text:'南京', par:'jiangsu'},
      {id:'wuxi', text:'无锡', par:'jiangsu'},
      {id:'suzhou', text:'苏州', par:'jiangsu'},

      {id:'wenzhou', text:'温州', par:'zhejiang'},
      {id:'hangzhou', text:'杭州', par:'zhejiang'},
    ]
    /* end data */

    $(document).ready(function(){
      $('input[name="daterange"]').daterangepicker();

      provinces.forEach(function(e,idx){
        $('#province-menu').append(`<li><a id=${e.id} class='input-link' target='province'>${e.text}</a></li>`)
      })

      cities.forEach(function(e,idx){
        $('#city-menu').append(`<li><a id=${e.id} par=${e.par} class='input-link' target='city'>${e.text}</a></li>`)
      })

    })

    $(document).on('click', 'a.input-link', function(e){
      e.preventDefault();
      var t =$(this).attr('target');
      var oldValue = $(`input[name=${t}]`).val();
      if(oldValue !== $(this).text()) {
        $(`input[name=${t}]`).val($(this).text()).trigger('change')
      }
    });

    $('input[name="province"]').on("change", function(){
      $('input[name="city"]').val("");
      $('#city-menu a.input-link').hide();

      var current_province = provinces.find((elem) => { return elem.text===$(this).val()});

      $('#city-menu a.input-link').filter((idx, elem) => {
        return $(elem).attr('par') === current_province.id;
      }).show();
    });


  </script>
