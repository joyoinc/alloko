<% include partials/locals-functions %>

<style>
tr:nth-child(even){background-color: #f2f2f2}
table {
    border-collapse: separate;
    width: 100%;
    border: 1px solid black;
} 
</style>
</head>
<body>

<table class="table table-bordered" width="100%">
    <tr class="info">
        <th> 订单号</th>
        <th> 总价格（美元） </th>
        <th> 服务类型 </th>
        <th> 客户 </th>
        <th> 服务起始时间 </th>
        <th> 服务结束时间 </th>
        <th>  </th>
    </tr>
    <% for(var idx=0; idx < myOrders.length; idx++) { %>
    <tr>
        <td><%= myOrders[idx].id %></td>
        <td><%= myOrders[idx].totalPrice %>  </td>
        <td><%= myOrders[idx].type %></td>
        <td><%= myOrders[idx].customerId %>   </td>
        <td><%= dateToString(myOrders[idx].serviceStartDate) %> </td>
        <td><%= dateToString(myOrders[idx].serviceEndDate) %>    </td>
        <td><a href="/HostManager/hostComment/<%= myOrders[idx].id %>">评价</a>    </td>
    </tr>
    <% }%>
</table>




















