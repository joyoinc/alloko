<div class="container">

    <% for(var i=0; i<allShortMessages.length; i++) { %>
        <h4>Message from
            <%= allShortMessages[i].from %>,
                <%= allShortMessages[i].createdAt %>
        </h4>
        <form class="form-horizontal">
            <div class="form-group">
                <label for="subject" class="control-label col-md-2">Subject:</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" disabled="disabled" value="<%= allShortMessages[i].subject %>"></input>
                </div>
            </div>

            <div class="form-group">
                <label for="body" class="control-label col-md-2">Body:</label>
                <div class="col-md-10">
                    <textarea class="form-control" rows="10" disabled="disabled"><%= allShortMessages[i].body %></textarea>
                </div>
            </div>

            <% if (allShortMessages[i].reply) { %>
                <div class="form-group">
                    <label for="body" class="control-label col-md-2">Reply:</label>
                    <div class="col-md-10">
                        <textarea type="text" class="form-control" disabled="disabled"><%= allShortMessages[i].reply %></textarea>
                    </div>
                </div>
                <% } else { %>
                    <input type="hidden" name="id" value="<%= allShortMessages[i].id %>" />
                    <div class="form-group">
                        <label for="body" class="control-label col-md-2">Reply:</label>
                        <div class="col-md-10">
                            <p>
                                <textarea class="form-control" rows="10" name="reply" id="reply"></textarea>
                            </p>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-sm-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary btn-submit">Reply</button>
                        </div>
                    </div>

                    <% }%>
        </form>

        <hr />
        <% }%>
</div>


<div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="modal1-title">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="modal1-title"> title </h4>
            </div>
            <div class="modal-body">
                <div class="alert " role="alert" id="modal1-msg"> message </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).on('submit', 'form', (evt) => {
        evt.preventDefault();
        var aMessage = $(evt.target).serialize();
        aMessage += "&type=sim";
        $.post("/Message/replyShortMessage", aMessage, (data) => {
            var model = { type: 'success', title: 'Well done!', message: 'New record created', modalId: 'modal1' };
            if (data.ok) {
                if (data.op == 'u')
                    model = { type: 'info', title: 'Alright!', message: 'Record updated', modalId: 'modal1' };
            } else {
                model = { type: 'error', title: 'Sorry!', message: 'Something wrong to save the data', modalId: 'modal1' };
            }

            $('#modal1 div.alert').removeClass().addClass(`alert alert-${model.type}`).text(`${model.title} ${model.message}`);

            $('#modal1').modal('show');
        });
    });

</script>