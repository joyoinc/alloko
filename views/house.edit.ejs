<% include forms/new.house.ejs %>

<script >

  $("#housepic").fileinput({
    showPreview: true,
    uploadAsync: false,
    uploadUrl:"/message/image/housepic",
  })

  $("#ownershippic").fileinput({
    showPreview: true,
    uploadAsync: false,
    uploadUrl:"/message/image/ownershippic",
  })

  $(document).on('submit', 'form', (evt) => {
    evt.preventDefault();
    $.post($('form').attr('action'), $('form').serialize(), (data) => {
      var jst_tmpl = this['JST'][`assets/templates/alert-dismissible.html`]({
        type: 'alert-success', title: 'Good job!', info: 'New record success'
      });

      $('#root').append(jst_tmpl);
    });
  });

  $(document).on('click', 'form .btn-submit', (evt) => {
    evt.preventDefault();
    $('form').submit();
  });

  $(document).ready(function () {
    toggleSiderbarMenu('edit_house');
  });
</script>


